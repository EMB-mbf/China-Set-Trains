switch (FEAT_TRAINS, SELF, switch_sl7_cargo_subtype, cargo_subtype) {
    0: return string(STR_PX7_GREEN);
    1: return string(STR_PX7_BLUE);
    2: return string(STR_SL7_BLACK);
    3: return string(STR_SL7_BLUE);
    4: return string(STR_SL7_GREEN);
    return CB_RESULT_NO_TEXT;
}

switch (FEAT_TRAINS, SELF, switch_sl7_articulated_part, extra_callback_info1) {
    1..2: return sl7;
    return CB_RESULT_NO_MORE_ARTICULATED_PARTS;
}

switch (FEAT_TRAINS, SELF, switch_gfx_sl7_front, cargo_subtype) {
    0: spriteset_px7_green_front;
    1: spriteset_px7_blue_front;
    2: spriteset_sl7_black_front;
    3: spriteset_sl7_blue_front;
    4: spriteset_sl7_green_front;
    return CB_RESULT_NO_TEXT;
}

switch (FEAT_TRAINS, SELF, switch_gfx_sl7_back, cargo_subtype) {
    0: spriteset_px7_green_back;
    1: spriteset_px7_blue_back;
    2: spriteset_sl7_black_back;
    3: spriteset_sl7_blue_back;
    4: spriteset_sl7_green_back;
    return CB_RESULT_NO_TEXT;
}

switch (FEAT_TRAINS, SELF, switch_sl7_graphics, position_in_articulated_veh % 3) {
    1: switch_gfx_sl7_front;
    2: switch_gfx_sl7_back;
    empty_sprites;
}


item (FEAT_TRAINS, sl7) {
    property {
        // Don't Change - It is crucial
        sprite_id:                      SPRITE_ID_NEW_TRAIN;
        climates_available:             ALL_CLIMATES;

        // Don't Change - Unless it is not a steam locomotive
        engine_class:                   ENGINE_CLASS_STEAM;
        running_cost_base:              RUNNING_COST_STEAM;
        refittable_cargo_classes:       bitmask(CC_PASSENGERS);
        non_refittable_cargo_classes:   0;
        cargo_allow_refit:              [];
        cargo_disallow_refit:           [];
        refit_cost:                     0;
        default_cargo_type:             PASS;
        misc_flags:                     bitmask(TRAIN_FLAG_AUTOREFIT);
        // This is for freight locos
        ai_special_flag:                AI_FLAG_CARGO;

        // Don't Change - It is useless
        cargo_capacity:                 1;
        cost_factor:                    1;
        running_cost_factor:            1;

        // Change them accordingly
        name:                           string(STR_NAME_SL7);
        introduction_date:              date(1934,01,01);
        model_life:                     60;
        retire_early:                   49;
