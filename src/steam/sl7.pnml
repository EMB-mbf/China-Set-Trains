        power:                          1946 hpM;
        weight:                         201 ton;
        tractive_effort_coefficient:    0.0787;
        reliability_decay:              14;
        bitmask_vehicle_info:           0;
    }
    graphics {
        // Menu
        additional_text:                string(STR_DESC_5, string(STR_FULL_NAME_SL7), string(STR_ALIASNAME_SL7), string(STR_LV_AVAILABLE_S ,string(STR_LIVERY_AVAILABLE), string(STR_PX7_BLUE), string(STR_PX7_GREEN), string(STR_SL7_BLACK), string(STR_SL7_BLUE), string(STR_SL7_GREEN)), string(STR_ELECTRICITY_SUPPLY_NO), string(STR_RELDEC_MEDIUM, 14));
        can_attach_wagon:               locowagon;
        cargo_subtype_text:             switch_sl7_cargo_subtype;

        // Graphics
        default:                        switch_sl7_graphics;
        purchase:                       spriteset_sl7_purchase;
        articulated_part:               switch_sl7_articulated_part;

        // Stats
        length:                         switch_length_2_8_6;
        cargo_capacity:                 0;
        cost_factor:                    56;
        running_cost_factor:            41 * runningcostfactor();
        purchase_running_cost_factor:   164;
        purchase_cargo_capacity:        0;
    }
}

