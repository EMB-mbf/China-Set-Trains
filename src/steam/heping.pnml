        weight:                         213 ton;
        tractive_effort_coefficient:    0.1587;
        reliability_decay:              20;
        bitmask_vehicle_info:           0;
    }
    graphics {
        // Menu
        additional_text:                string(STR_DESC_5, string(STR_FULL_NAME_HP), string(STR_ALIASNAME_HP), string(STR_LV_AVAILABLE_S ,string(STR_LIVERY_AVAILABLE), string(STR_LIVERY_4AXLE), string(STR_LIVERY_6AXLE)), string(STR_ELECTRICITY_SUPPLY_NO), string(STR_RELDEC_HIGH, 20));
        can_attach_wagon:               locowagon;
        cargo_subtype_text:             switch_hp_cargo_subtype;

        // Graphics
        default:                        switch_hp_graphics;
        purchase:                       spriteset_hp_purchase;
        articulated_part:               switch_hp_articulated_part;

        // Stats
        length:                         switch_length_hp;
        cargo_capacity:                 0;
        cost_factor:                    56;
        running_cost_factor:            39 * runningcostfactor();
        purchase_running_cost_factor:   156;
        purchase_cargo_capacity:        0;
        weight:                         switch_weight_hp;
        tractive_effort_coefficient:    switch_hp_te;
        name:                           switch_hp_name;
    }
}

