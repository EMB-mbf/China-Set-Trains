// Begin heping

switch (FEAT_TRAINS, SELF, switch_hp_name, getbits(extra_callback_info1, 0, 8) == 0x20? getbits(extra_callback_info1, 8, 8) : 0xFFFF) {
    0: return string(STR_QJ_SERIES);
    return CB_RESULT_NO_TEXT;
}

// Graphics

spriteset (spriteset_hp_purchase, ZOOM_LEVEL_IN_4X, BIT_DEPTH_32BPP) {
    template_purchase_xl ("steam/extralength", "hp")
}

spriteset (spriteset_hp_front, ZOOM_LEVEL_IN_4X, BIT_DEPTH_32BPP) {
    template_standard ("steam", "hp-front")
}
spriteset (spriteset_hp_back4, ZOOM_LEVEL_IN_4X, BIT_DEPTH_32BPP) {
    template_standard ("steam", "qj-back4")
}
spriteset (spriteset_hp_back6, ZOOM_LEVEL_IN_4X, BIT_DEPTH_32BPP) {
    template_standard ("steam", "qj-back6")
}



switch (FEAT_TRAINS, SELF, switch_hp_cargo_subtype, cargo_subtype) {
    0: return string(STR_LIVERY_4AXLE);
    1: return string(STR_LIVERY_6AXLE);
    return CB_RESULT_NO_TEXT;
}

switch (FEAT_TRAINS, SELF, switch_hp_articulated_part, extra_callback_info1) {
    1..2: return heping;
    return CB_RESULT_NO_MORE_ARTICULATED_PARTS;
}

switch (FEAT_TRAINS, SELF, switch_gfx_hp_back, cargo_subtype) {
    0: spriteset_hp_back4;
    1: spriteset_hp_back6;
    return CB_RESULT_NO_TEXT;
}

switch (FEAT_TRAINS, SELF, switch_hp_graphics, position_in_articulated_veh % 3) {
    1: spriteset_hp_front;
    2: switch_gfx_hp_back;
    empty_sprites;
}

switch (FEAT_TRAINS, SELF, switch_length_hp_tender, cargo_subtype) {
    0: return 6;
    return 8;

}
switch (FEAT_TRAINS, SELF, switch_length_hp, position_in_articulated_veh % 3) {
    0: return 2;
    1: return 8;
    return switch_length_hp_tender;
}

switch (FEAT_TRAINS, SELF, switch_weight_hp, cargo_subtype) {
    0: return 213;
    return 253;

}

switch (FEAT_TRAINS, SELF, switch_hp_te, cargo_subtype) {
    0: return int(0.1587*255);
    return int(0.1334*255);

}



